<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/public_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_height_50dp"
    android:background="?attr/colorPrimary"
    app:contentInsetStart="0dp">

    <TextView
        android:id="@+id/public_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/public_white"
        android:textSize="@dimen/public_font_18sp"
        tools:text="@string/public_app_name" />
</FrameLayout>